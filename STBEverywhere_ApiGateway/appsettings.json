{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
    "AllowedHosts": "*"




    {
        "ReverseProxy": {
            "Routes": {
                "authRoute": {
                    "ClusterId": "clientService",
                    "Match": {
                        "Path": "/api/auth/{**catch-all}"
                    }
                },
                "clientRoute": {
                    "ClusterId": "clientService",
                    "Match": {
                        "Path": "/api/client/{**catch-all}"
                    }
                }
            },
            "Clusters": {
                "clientService": {
                    "Destinations": {
                        "destination1": {
                            "Address": "http://localhost:5260" // Adresse du service Client
                        }
                    }
                }
            }
        }
    }
}
